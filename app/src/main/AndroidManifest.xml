<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.app.devrah">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission
        android:name="com.radioayah.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_devrh"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon,android:label">
        <activity android:name=".Views.SignUpActivity" />
        <activity android:name=".Views.Login" />
        <activity android:name=".Views.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Views.Dashboard" />
        <activity android:name=".Views.Project.ProjectsActivity" />
        <activity android:name=".Views.Board.BoardsActivity" />
        <activity android:name=".Views.BoardExtended.BoardExtended" />
        <activity
            android:name=".Views.CardActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".Views.ImageDescription" />
        <activity android:name=".Views.TestActivity" />
        <activity android:name=".Views.FavouritesActivity" />
        <activity android:name=".Views.MyCardsActivity" />
        <activity android:name=".Views.NotificationsActivity" />
        <activity android:name=".Views.MessagesActivity" />
        <activity
            android:name=".Views.SendNewMessageActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".Views.CreateNewTeamActivity" />
        <activity android:name=".Views.ProfileActivity" />

        <service
            android:name=".FireBase_Notifications.MyFirebaseMessagingService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".FireBase_Notifications.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".FireBase_Notifications.RegistrationIntentService"
            android:exported="false" />

        <activity android:name=".Views.MenuActivity" />
        <activity
            android:name=".Views.viewMessage"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Views.manage_members"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Views.Manage_Board_Members"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Views.CheckList_Detail"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Views.Reply"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".Views.Manage_Card_Members"
            android:windowSoftInputMode="stateHidden"></activity>
    </application>

</manifest>