<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background_card_layout_cards"
    android:id="@+id/layoutTestRecycleView"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_marginTop="4dp"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:id="@+id/cardImage"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"/>
    <HorizontalScrollView
        android:layout_below="@+id/cardImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="0dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:id="@+id/labelScroller"
        >
        <LinearLayout
            android:id="@+id/labelsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            tools:ignore="Orientation">
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:layout_below="@id/labelScroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:text="sdfghj"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:id="@+id/tvFragmentBoardsList"
        android:textColor="#fff"
        />
<LinearLayout
    android:id="@+id/layoutIconsView"
    android:layout_below="@+id/tvFragmentBoardsList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="2dp">
    <TextView
        android:layout_below="@id/tvFragmentBoardsList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_marginTop="1dp"
        android:text="due date"
        android:drawableLeft="@drawable/clock"
        android:drawablePadding="2dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="4dp"
        android:id="@+id/dateLabel"
        android:textColor="#fff"
        android:visibility="gone"

        />
    <ImageView
        android:id="@+id/descriptionIcon"
        android:layout_width="23dp"
        android:layout_height="25dp"
        android:layout_below="@id/tvFragmentBoardsList"
        android:background="@drawable/description_icon"
        android:layout_toEndOf="@+id/subscribedIcon"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="0dp"

        />
    <ImageView
        android:id="@+id/checkboxIcon"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_below="@id/tvFragmentBoardsList"
        android:background="@drawable/checklist_icon"
        android:layout_toEndOf="@+id/descriptionIcon"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:visibility="gone"

        />
    <TextView
        android:layout_below="@id/tvFragmentBoardsList"
        android:layout_toEndOf="@id/checkboxIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:paddingStart="1dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingEnd="3dp"
        android:layout_marginTop="1dp"
        android:text=""
        android:id="@+id/noOfCheckedCheckbox"
        android:textColor="#fff"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/lockedIcon"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:layout_below="@id/tvFragmentBoardsList"
        android:background="@drawable/lock_icon"
        android:layout_toEndOf="@+id/noOfCheckedCheckbox"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/subscribedIcon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_below="@id/tvFragmentBoardsList"
        android:background="@drawable/subscribe_eye"
        android:layout_toEndOf="@+id/nOfAttachments"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="3dp"
        android:visibility="gone"
        />

    <ImageView
        android:layout_below="@id/tvFragmentBoardsList"
        android:layout_toRightOf="@id/dateLabel"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="12dp"
        android:id="@+id/attachmentIcon"
        android:textColor="#fff"
        android:background="@drawable/fab_icon_attachment"
        android:visibility="gone"
        />
    <TextView
        android:layout_below="@id/tvFragmentBoardsList"
        android:layout_toRightOf="@id/attachmentIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:paddingStart="0dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingEnd="3dp"
        android:layout_marginTop="1dp"
        android:text=""
        android:id="@+id/nOfAttachments"
        android:textColor="#fff"
        android:visibility="gone"
        />
</LinearLayout>
    <HorizontalScrollView
        android:layout_below="@id/layoutIconsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/memberScroller"
        android:layout_alignParentEnd="true"
        >
        <LinearLayout
            android:id="@+id/membersListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            tools:ignore="Orientation">
        </LinearLayout>
    </HorizontalScrollView>


</RelativeLayout>