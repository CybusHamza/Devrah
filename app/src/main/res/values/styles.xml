    <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:fontFamily">@string/monoSapce</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/colorGreen</item>
        <item name="android:textColor">@color/colorPrimary</item>

        <!-- To change the background of options menu-->
        <item name="android:itemBackground">@color/colorWhite</item>
    </style>
    <style name="SpinnerUnderlined">
        <item name="android:background">@drawable/spinner_dropdown_with_line</item>
    </style>

