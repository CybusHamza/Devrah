<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e7e5e5">

    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Card"
        android:textSize="20dp"
        android:padding="16dp"
        android:background="#b4b2b2"
        android:textColor="#000"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/pTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#000"
        android:text="Select Project*" />

    <Spinner
        android:id="@+id/projectSpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:textColor="#000"
        android:background="@drawable/dropdown_mainscreen" />
    <TextView
        android:id="@+id/bTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:text="Select Board*" />

    <Spinner
        android:id="@+id/boardSpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:textColor="#000"
        android:background="@drawable/dropdown_mainscreen" />
    <TextView
        android:id="@+id/lTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#000"

        android:text="Select List*" />

    <Spinner
        android:id="@+id/listSpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:textColor="#000"
        android:background="@drawable/dropdown_mainscreen" />
    <TextView
        android:id="@+id/cTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Card Name*" />

    <EditText
        android:id="@+id/etCardName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:textColor="#000"
        android:layout_marginRight="5dp"/>
<LinearLayout
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:gravity="end"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#b4b2b2">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Cancel"
        android:layout_margin="5dp"
        android:background="@color/colorRed"
        android:id="@+id/cancelBtn"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:text="Save"
        android:background="@color/lightGreen"
        android:id="@+id/saveCardBtn"/>

</LinearLayout>
</LinearLayout>