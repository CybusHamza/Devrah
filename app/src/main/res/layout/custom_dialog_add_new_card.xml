<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e2e1e1">

    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Card"
        android:padding="10dp"
        android:textSize="20dp"
        android:textColor="#525050"
        android:textStyle="bold"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_line"/>
    <TextView
        android:id="@+id/pTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#000"
        android:text="Select Project*" />

    <Spinner
        android:id="@+id/projectSpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:textColor="#000"
        android:background="@drawable/spinner_dropdown" />
    <TextView
        android:id="@+id/bTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:text="Select Board*" />

    <Spinner
        android:id="@+id/boardSpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:textColor="#000"
        android:background="@drawable/spinner_dropdown" />
    <TextView
        android:id="@+id/lTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#000"

        android:text="Select List*" />

    <Spinner
        android:id="@+id/listSpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:textColor="#000"
        android:background="@drawable/spinner_dropdown" />
    <TextView
        android:id="@+id/cTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Card Name*" />

    <EditText
        android:id="@+id/etCardName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:textColor="#000"
        android:layout_marginRight="5dp"/>
<LinearLayout
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    android:gravity="end"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e2e1e1">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Cancel"
        android:layout_margin="5dp"
        android:textColor="#f50b22"
        android:background="@null"
        android:id="@+id/cancelBtn"
        android:textAllCaps="false"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:text="Save"
        android:textAllCaps="false"
        android:background="@null"
        android:textColor="@color/colorPrimary"
        android:id="@+id/saveCardBtn"/>

</LinearLayout>
</LinearLayout>