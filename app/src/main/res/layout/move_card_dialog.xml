<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Move Card"
        android:textSize="17sp"
        android:padding="7dp"
        android:textColor="#525050"
        android:id="@+id/heading" />
    <ImageView
        android:layout_below="@id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/borderline"
        android:background="@drawable/border_line"/>

    <TextView
        android:id="@+id/boardLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="12dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:text="Board: "
        android:layout_below="@+id/borderline"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/boardSpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_margin="20dp"
        android:layout_below="@+id/boardLabel"
        android:layout_marginTop="23dp" />
    <TextView
        android:id="@+id/listLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="12dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:text="List: "
        android:layout_below="@+id/boardSpinner"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/listSpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_margin="20dp"
        android:layout_below="@+id/listLabel"
        android:layout_marginTop="23dp" />
    <TextView
        android:id="@+id/positionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="12dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:text="Position: "
        android:layout_below="@+id/listSpinner"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/positionSpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_margin="20dp"
        android:layout_below="@+id/positionLabel"
        android:layout_marginTop="23dp" />
    <Button
        android:id="@+id/copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:background="@drawable/bg_boards_extended_green"
        android:layout_alignEnd="@+id/positionSpinner"
        android:layout_below="@+id/positionSpinner"
        android:layout_marginTop="25dp"
        android:text="Move" />

    <Button
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_boards_extended_list"
        android:text="Close"
        android:layout_marginBottom="20dp"
        android:textColor="#f50b22"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/copy"
        android:layout_alignBottom="@+id/copy"
        android:layout_alignStart="@+id/positionSpinner" />


</RelativeLayout>