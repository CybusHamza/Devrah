<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#EDEFF0"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Copy List"
        android:textSize="17sp"
        android:padding="7dp"
        android:textColor="#525050"

        android:id="@+id/heading" />
    <ImageView
        android:layout_below="@id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/borderline"
        android:background="@drawable/border_line"/>

    <TextView
        android:id="@+id/sub_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="12dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:text="Project: "
        android:layout_below="@+id/borderline"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/projects_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="20dp"

        android:layout_below="@+id/sub_heading"
        android:layout_marginTop="23dp" />


    <Spinner
        android:id="@+id/board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
       android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/projects_group" />

    <TextView
        android:id="@+id/board_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:text=" Boards : "
        android:layout_below="@+id/projects_group"
        android:layout_alignStart="@+id/sub_heading" />


    <Spinner
        android:id="@+id/position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/board" />

    <TextView
        android:id="@+id/pos_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:text=" Position : "
        android:layout_below="@+id/board"
        android:layout_alignStart="@+id/sub_heading" />

    <Button
        android:id="@+id/copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:background="@drawable/bg_boards_extended_green"
        android:layout_alignEnd="@+id/projects_group"
        android:layout_below="@+id/position"
        android:layout_marginTop="25dp"
        android:text="Copy" />

    <Button
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_boards_extended_list"
        android:text="Close"
        android:layout_marginBottom="20dp"
        android:textColor="#f50b22"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/copy"
        android:layout_alignBottom="@+id/position"
        android:layout_alignStart="@+id/projects_group" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:textSize="23sp"
        android:padding="7dp"
        android:textColor="#000"
        android:layout_alignBottom="@+id/copy"
        android:layout_alignParentStart="true" />

</RelativeLayout>