<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/marker"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/marker_p" />
    <TextView

        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:id="@+id/userName"
        android:layout_toEndOf="@id/marker"
        android:text="jfalsdj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textColor="@color/colorPrimary"/>
    <android.support.v7.widget.CardView
        android:layout_below="@+id/userName"
        android:layout_toEndOf="@id/marker"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="5dp"
        android:id="@+id/rv_item_card"
        android:layout_marginEnd="30dp"
        android:layout_width="330dp"
        android:layout_height="wrap_content">


        <TextView
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="14dp"
            android:textColor="@color/black"
            android:id="@+id/rv_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Random"
            />
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="2dp"
            android:text="date"
            android:layout_gravity="end"/>

    </android.support.v7.widget.CardView>
    <ImageView
        android:id="@+id/attachment"
        android:layout_marginTop="4dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/rv_item_card"
        android:visibility="gone"/>
    <!--<ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:id="@+id/delete"
        android:background="@android:drawable/ic_menu_delete"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>-->
    <TextView
        android:layout_below="@id/attachment"
        android:id="@+id/reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reply"
        android:textColor="#fff"
        android:layout_marginStart="55dp"/>
    <TextView
        android:layout_below="@id/attachment"
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:layout_toEndOf="@id/reply"
        android:textColor="#fff"
        android:layout_marginStart="25dp"/>
    <TextView
        android:layout_below="@id/attachment"
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:layout_toEndOf="@id/edit"
        android:textColor="#fff"
        android:layout_marginStart="25dp"/>
    <TextView
        android:layout_alignParentEnd="true"
        android:gravity="end"
        android:layout_marginEnd="30dp"
        android:id="@+id/showMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_more"
        android:textColor="#fff"
        android:visibility="gone"
        android:layout_below="@id/reply"/>

</RelativeLayout>