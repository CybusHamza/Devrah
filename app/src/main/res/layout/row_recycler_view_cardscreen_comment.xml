<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="5dp"

    android:id="@+id/cardView"

    android:background="#fff"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/cardview_light_background">


        <ImageView
            android:id="@+id/imageCardView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignBottom="@+id/comment"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/bg_circle" />

        <TextView
            android:id="@+id/id_of_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/imageCardView"
            android:text="id_of_person"
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/id_of_person"
            android:layout_alignBottom="@+id/id_of_person"
            android:layout_centerHorizontal="true"
            android:text="on"
            android:textColor="#000" />

        <TextView
            android:id="@+id/name_of_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_marginStart="12dp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/textView2"
            android:text="name_of_card"
            android:textColor="#000" />

        <TextView
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/id_of_person"
            android:layout_below="@+id/id_of_person"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/bg_tv_card_recyclerview"
            android:padding="10dp"
            android:text="Comment"
            android:textColor="#000" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_dlt"
            android:id="@+id/commentMenu"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/edit_delete_layout"
            android:layout_below="@+id/id_of_person"
            android:layout_alignEnd="@+id/comment"></LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dcdcdc"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />





    </RelativeLayout>




</android.support.v7.widget.CardView>