<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="120dp"

    android:layout_height="120dp"
    android:id="@+id/cvAttachment"
    android:layout_marginLeft="5dp"
    android:background="@null"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
     android:layout_width="match_parent"
    android:background="@drawable/outer_border_checklist"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_margin="1dp"
        android:background="@color/gray"
        android:id="@+id/rvImageView"/>





<ImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:background="@drawable/close_white_icon"
    android:id="@+id/menuIcon"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    />



</RelativeLayout>
</android.support.v7.widget.CardView>