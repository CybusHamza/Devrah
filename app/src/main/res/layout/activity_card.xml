<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.devrah.Views.CardActivity"

    >

    <RelativeLayout
        android:id="@+id/bg_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6897BB"

        android:fitsSystemWindows="true"
        android:gravity="bottom">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.design.widget.AppBarLayout
                android:id="@+id/appBar"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#6897BB"
                android:fitsSystemWindows="true"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                <android.support.design.widget.CollapsingToolbarLayout
                    android:id="@+id/collapsingToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    app:contentScrim="?attr/colorPrimary"
                    app:expandedTitleMarginEnd="64dp"
                    app:expandedTitleMarginStart="48dp"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    app:title="Collapsing Toolbar">

                    <ImageView
                        android:id="@+id/toolbarImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true"
                        android:scaleType="centerCrop"

                        app:layout_collapseMode="parallax" />


                    <!--<include-->
                    <!--layout="@layout/app_bar"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->


                    <!--/>-->


                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        app:layout_collapseMode="pin"
                        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
                </android.support.design.widget.CollapsingToolbarLayout>
            </android.support.design.widget.AppBarLayout>


            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:fillViewport="true"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Add Description"
                        android:textColorHint="#FF696969"
                        android:textColor="#000"
                        android:layout_margin="10dp"
                       />
                    <TextView
                        android:id="@+id/tvLabels"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:text="Labels"
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_recycler_labels"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


                    <TextView
                        android:id="@+id/tvAddLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:text="CREATE A NEW LABEL"
                        android:textColor="#00FA9A"
                        android:visibility="gone" />


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_labels_card_screen_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:clickable="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2">
                        <TextView
                            android:id="@+id/tvStartDate"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:buttonTint="#000"
                            android:padding="5dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:text="boom boom"
                            android:textColor="#000"
                            android:textSize="15sp"
                            android:background="@drawable/bg_boards_extended_list_white"
                            />

                        <TextView
                            android:id="@+id/tvDue"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:buttonTint="#000"
                            android:padding="5dp"
                            android:layout_marginRight="20dp"
                            android:textAlignment="center"
                            android:layout_weight="1"
                            android:text="boom boom"
                            android:textColor="#000"
                            android:textSize="15sp"
                            android:background="@drawable/bg_boards_extended_list_white"
                            />
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/tvStartTime"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:buttonTint="#000"
                        android:padding="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:text="boom boom"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:background="@drawable/bg_boards_extended_list_white"
                         />

                    <TextView
                        android:id="@+id/tvDueTime"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:buttonTint="#000"
                        android:textAlignment="center"
                        android:padding="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:text="boom boom"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:background="@drawable/bg_boards_extended_list_white"
                        />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnComplete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginTop="5dp"
                        android:buttonTint="#000"
                        android:padding="5dp"
                        android:background="@color/colorPrimary"
                        android:text="Mark Completed"
                        android:textColor="#fff"
                        android:textSize="15sp" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        android:layout_gravity="start"
                        android:src="@drawable/attachment_icon_card"
                        android:visibility="gone"
                        android:id="@+id/heading" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_files_cardscreen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:clickable="true" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvImagesAttachment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left" />


                    <TextView
                        android:id="@+id/tvMembers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:text="Members"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:visibility="gone" />


                    <LinearLayout
                        android:id="@+id/linearLayoutCheckboxHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/checkbox_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Checklist"
                            android:textColor="#000"
                            android:textSize="20sp" />

                    </LinearLayout>


                    <ProgressBar
                        android:id="@+id/simpleProgressBar"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"

                        android:layout_height="0dp"
                        android:progressTint="#fac903" />


                    <LinearLayout
                        android:id="@+id/LinearLayoutChecklist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="2">

                        <EditText
                            android:id="@+id/etCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.57"
                            android:backgroundTint="#A9A9A9"
                            android:hint="Enter Your Check list"
                            android:textColor="#000"

                            android:textColorHint="#D3D3D3" />
                        <!--<Button-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_weight="1"-->
                        <!--android:id="@+id/addChecklist"-->
                        <!--android:background="#6897BB"-->
                        <!--android:text="enter"/>-->


                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_recycler_checklist"
                        android:layout_height="wrap_content"
                        android:dividerHeight="7dp"
                        android:layout_width="match_parent"/>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginRight="-50dp"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:src="@drawable/card_activity_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:text="Activity"
                            android:textColor="#000"
                            android:textSize="20sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:src="@drawable/comment" />


                        <EditText
                            android:id="@+id/etComment"
                            android:layout_width="275dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.57"
                            android:backgroundTint="#A9A9A9"

                            android:hint="Enter Your Comment"
                            android:textColor="#000"
                            android:textColorHint="#D3D3D3" />
                    </LinearLayout>


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>


        </android.support.design.widget.CoordinatorLayout>


        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"

            app:fab_progress="50"
            app:fab_progress_max="100"
            app:fab_progress_showBackground="false"
            app:menu_animationDelayPerItem="50"
            app:menu_backgroundColor="#4D000000"
            app:menu_buttonSpacing="0dp"
            app:menu_colorNormal="#DA4336"
            app:menu_colorPressed="#E75043"
            app:menu_colorRipple="#99FFFFFF"
            app:menu_fab_size="normal"
            app:menu_icon="@drawable/fab_add"
            app:menu_labels_colorNormal="#333333"
            app:menu_labels_colorPressed="#444444"
            app:menu_labels_colorRipple="#66FFFFFF"
            app:menu_labels_cornerRadius="3dp"
            app:menu_labels_ellipsize="none"
            app:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
            app:menu_labels_margin="0dp"
            app:menu_labels_maxLines="-1"
            app:menu_labels_padding="8dp"
            app:menu_labels_paddingBottom="4dp"
            app:menu_labels_paddingLeft="8dp"
            app:menu_labels_paddingRight="8dp"
            app:menu_labels_paddingTop="4dp"
            app:menu_labels_position="left"
            app:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
            app:menu_labels_showShadow="true"
            app:menu_labels_singleLine="false"
            app:menu_labels_textColor="#FFFFFF"
            app:menu_labels_textSize="14sp"

            app:menu_openDirection="up"
            app:menu_shadowColor="#66000000"

            app:menu_shadowRadius="4dp"


            app:menu_shadowXOffset="1dp"
            app:menu_shadowYOffset="3dp"

            app:menu_showShadow="true">

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/labels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_fab_star"
                app:fab_label="Labels"
                app:fab_size="mini" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/members"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_fab_star"
                app:fab_label="Members"
                app:fab_size="mini" />



            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/CheckList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_fab_star"
                app:fab_label="Check List"
                app:fab_size="mini" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/attachments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_fab_star"
                app:fab_label="Attachments"
                app:fab_size="mini" />

        </com.github.clans.fab.FloatingActionMenu>

        <RelativeLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true" />


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="#ffff"
        android:choiceMode="singleChoice"
        android:divider="#DCDCDC"
        android:dividerHeight="2dp" />


</android.support.v4.widget.DrawerLayout>
