<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/LinearLayoutheader"
    android:background="@null"
    android:layout_margin="5dp"
    >
    <LinearLayout
        android:id="@+id/commentsCheckListLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/commentsCheckList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_gravity="start"
        android:background="@drawable/comments_icon"/>
        <TextView
            android:id="@+id/noOfComments"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"/>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/simpleProgressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:progressTint="@color/blue" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:weightSum="1"
        android:background="@drawable/outer_border_checklist"
        android:orientation="horizontal"
        android:layout_marginBottom="3dp">


       <!-- <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:background="@drawable/checkbox_icon"
            />-->
        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:padding="7dp"
            android:drawablePadding="30dp"
            android:paddingLeft="20dp"
            android:text="Check List"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:textCursorDrawable="@null"
            android:textSize="17sp"
            android:textColor="#fff"
             />
        <TextView
            android:id="@+id/tvCompletedPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/deleteCheckList"
            android:textColor="#fff"
            android:layout_margin="10dp"
            />
        <ImageView
            android:id="@+id/deleteCheckList"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:background="@drawable/close_white_icon"/>
       <!-- <ImageView
            android:id="@+id/commentsCheckList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/deleteCheckList"

            android:layout_margin="5dp"
            android:background="@drawable/comments_icon"/>-->
    </RelativeLayout>




</LinearLayout>