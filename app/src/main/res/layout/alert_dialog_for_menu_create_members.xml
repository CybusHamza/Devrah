<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <TextView
        android:id="@+id/headingTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create New Team"
        android:textColor="#525050"
        android:textStyle="bold"
        android:textSize="13dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_line"/>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/Team"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:textColorHint="#BFBFBF"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_teamName"
            android:layout_width="match_parent"
            android:hint="Team Name"
            android:textColorHint="#636262"
            android:backgroundTint="#636262"
            android:textSize="13sp"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/TeamDescription"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:textColorHint="#BFBFBF"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_team_description"
            android:layout_width="match_parent"
            android:hint="Team Description"
            android:textColorHint="#636262"
            android:backgroundTint="#636262"
            android:textSize="15sp"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content"
            android:maxLength="255"
            />

    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:layout_gravity="end"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Cancel"
            android:id="@+id/cancel"
            android:paddingLeft="2dp"
            android:textSize="15sp"
            android:paddingRight="15dp"
            android:paddingTop="20dp"

            android:textColor="#f50b22"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Save and Add"
            android:id="@+id/addMember1"
            android:paddingLeft="2dp"
            android:textSize="15sp"
            android:paddingRight="15dp"
            android:paddingTop="20dp"
            android:paddingBottom="5dp"

            android:textColor="@color/colorPrimary"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Save and Close"
            android:id="@+id/addMember"
            android:paddingLeft="2dp"
            android:textSize="15sp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="5dp"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>

</LinearLayout>