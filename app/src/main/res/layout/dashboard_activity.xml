<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:id="@+id/rl">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageProfile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/bg_circle"
        android:layout_marginTop="162dp"
        app:civ_border_color="#fff"
        app:civ_border_width="2dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/imageView6" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/alias_img"
        android:visibility="gone"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:background="@drawable/round_bkg"
        android:layout_alignTop="@+id/imageProfile"
        android:layout_alignStart="@+id/imageProfile" />







    <ImageView
        android:id="@+id/dashboard_projects"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/dashboard_projects_icon"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="25dp"
        android:layout_above="@+id/imageInbox"
        android:layout_alignStart="@+id/imageInbox" />

    <ImageView
        android:id="@+id/imageMenu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/dashboard_menu_icon"
        android:layout_alignTop="@+id/dashboard_projects"
        android:layout_alignStart="@+id/imageNotification" />

    <ImageView
        android:id="@+id/imageInbox"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="5dp"
        app:srcCompat="@drawable/dashboard_messages_icon"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/imageFavourites"
        android:layout_toStartOf="@+id/imageProfile" />

    <ImageView
        android:id="@+id/imageFavourites"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/dashboard_star_icon"
        android:layout_below="@+id/imageProfile"
        android:layout_alignStart="@+id/dashboard_projects" />

    <ImageView
        android:id="@+id/imageNotification"
        android:layout_width="40dp"
        android:layout_height="40dp"

        app:srcCompat="@drawable/dashboard_noti_icon"
        android:layout_below="@+id/imageProfile"
        android:layout_toEndOf="@+id/dashboard_projects"
        android:layout_marginStart="20dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/dashboard_my_cards_icon"
        android:layout_alignTop="@+id/imageInbox"
         />
</RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/rl"
    >
    <TextView
        android:fontFamily="@string/monoSapce"
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="2dp"
        android:textSize="25sp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:text="TextView" />

    <TextView
        android:fontFamily="@string/monoSapce"
        android:id="@+id/tvQuote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="TextView"
        android:maxLines="7"
        android:textColor="@color/colorWhite"
        android:layout_below="@id/tvTime"
        android:layout_marginTop="10dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        />
    <TextView
        android:fontFamily="@string/monoSapce"
        android:id="@+id/tvAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textStyle="bold"
        android:text=""
        android:textColor="@color/colorWhite"
        android:layout_below="@id/tvQuote"
        android:layout_marginTop="3dp"
        android:layout_alignEnd="@id/tvQuote"
        android:gravity="end"
        />
</RelativeLayout>
</RelativeLayout>
