<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="280dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Copy Project"
        android:textSize="23sp"
        android:padding="7dp"
        android:textColor="#000"
        android:background="#D5D5D5"
        android:id="@+id/heading" />

    <TextView
        android:id="@+id/sub_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="12dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:text="Copy to Group : "
        android:layout_below="@+id/heading"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/projects_group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_margin="20dp"
        android:layout_below="@+id/sub_heading"
        android:layout_marginTop="23dp" />

    <Button
        android:id="@+id/copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:background="@drawable/bg_boards_extended_green"
        android:layout_alignEnd="@+id/projects_group"
        android:layout_below="@+id/projects_group"
        android:layout_marginTop="25dp"
        android:text="Copy" />

    <Button
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_boards_extended_list"
        android:text="Close"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/copy"
        android:layout_alignBottom="@+id/copy"
        android:layout_alignStart="@+id/projects_group" />


</RelativeLayout>