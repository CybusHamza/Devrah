<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    tools:context="com.app.devrah.Views.SendNewMessageActivity">
    <include
        android:id="@+id/header"
        layout="@layout/app_bar">
    </include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/header">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header"
            android:padding="15dp">
            <TextView
                android:id="@+id/to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="To :"
                android:textSize="13sp"
                android:textColor="#000"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/etEmails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:ems="10"
                android:textColor="#000"
                android:layout_alignStart="@+id/projectSpinner"
                android:layout_alignEnd="@+id/projectSpinner" />
            <TextView
                android:id="@+id/project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Project"
                android:textSize="13sp"
                android:textColor="#000"
                android:layout_below="@id/etEmails"
                android:layout_alignParentStart="true" />
            <EditText
                android:id="@+id/projectSpinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#000"
                android:padding="5dp"
                android:layout_below="@+id/etEmails"
                android:background="@drawable/dropdown_mainscreen"
                android:layout_toRightOf="@+id/project"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentEnd="true" />
            <TextView
                android:id="@+id/board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Board"

                android:textSize="13sp"
                android:textColor="#000"
                android:layout_below="@id/project"
                android:layout_alignParentStart="true" />
            <EditText
                android:id="@+id/boardSpinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#000"
                android:padding="5dp"
                android:layout_below="@+id/projectSpinner"
                android:background="@drawable/dropdown_mainscreen"
                android:layout_toRightOf="@+id/project"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentEnd="true" />
            <TextView
                android:id="@+id/card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:text="Card"
                android:textSize="13sp"
                android:textColor="#000"
                android:layout_below="@id/board"
                android:layout_alignParentStart="true" />
            <EditText
                android:id="@+id/cardSpinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#000"
                android:padding="5dp"
                android:layout_below="@+id/boardSpinner"
                android:background="@drawable/dropdown_mainscreen"
                android:layout_toRightOf="@+id/project"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentEnd="true" />
            <TextView
                android:id="@+id/subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Subject"
                android:textSize="13sp"
                android:textColor="#000"
                android:layout_below="@id/card"
                android:layout_alignParentStart="true" />
            <EditText
                android:id="@+id/etSubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="5dp"
                android:textColor="#000"
                android:layout_alignBaseline="@+id/subject"
                android:layout_alignBottom="@+id/subject"
                android:layout_alignStart="@+id/cardSpinner"
                android:layout_alignEnd="@+id/cardSpinner" />
            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Message *"
                android:textSize="13sp"
                android:textColor="#000"
                android:layout_below="@id/subject"
                android:layout_alignParentStart="true" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:id="@+id/textEditorLayout"
                android:layout_below="@id/message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >


                <EditText
                    android:id="@+id/editor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:textColor="#000" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_below="@+id/textEditorLayout">
                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"/>


            </LinearLayout>
        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
