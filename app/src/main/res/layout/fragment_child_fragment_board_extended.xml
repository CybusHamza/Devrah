
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_projects"
>

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="2dp"
        android:background="@drawable/bkg_board"
        tools:context="com.app.devrah.Fragments.ChildFragmentBoardExtended"
        >


    <TextView
        android:id="@+id/textName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:padding="5dp"
        android:text="TextView"
        android:textColor="#fff"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:src="@drawable/menu_dlt"
        android:id="@+id/menuBoards"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp" />

        <ImageView
            android:id="@+id/addCard"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="45dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/fab_add"
            android:padding="5dp"
            android:text="Add Card"
            android:textColor="#00FA9A"
            />

<LinearLayout
    android:id="@+id/layoutListView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textName"
    android:orientation="vertical">
    <ListView
        android:id="@+id/boardFragmentListView"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_below="@+id/textName"
        android:background="#DCDCDC"
        android:dividerHeight="3dp"
        android:layout_weight="1"
        />

</LinearLayout>



    </RelativeLayout>


</RelativeLayout>
