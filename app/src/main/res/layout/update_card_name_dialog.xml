<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Update Card Name"
        android:textSize="23sp"
        android:padding="7dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:background="#D5D5D5"
        android:id="@+id/heading" />



            <EditText
                android:id="@+id/etCardName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/black"
                android:layout_below="@+id/heading"
                />



            <Button
                android:id="@+id/copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:background="@drawable/bg_boards_extended_green"
                android:layout_alignEnd="@+id/etCardName"
                android:layout_below="@+id/etCardName"
                android:layout_marginTop="10dp"
                android:text="Update"
                android:layout_marginBottom="5dp"/>

            <Button
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_boards_extended_list"
                android:text="Close"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:layout_alignBaseline="@+id/copy"
                android:layout_alignBottom="@+id/copy"
                android:layout_alignStart="@+id/etCardName" />



</RelativeLayout>