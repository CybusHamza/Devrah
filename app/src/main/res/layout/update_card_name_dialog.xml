<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Card Name"
        android:textSize="17sp"
        android:padding="7dp"
        android:textColor="#525050"
        android:textStyle="bold"
        android:id="@+id/heading" />
    <ImageView
        android:layout_below="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_line"/>


            <EditText
                android:id="@+id/etCardName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_below="@+id/heading"
                />



            <Button
                android:id="@+id/copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:background="@drawable/bg_boards_extended_green"
                android:layout_alignEnd="@+id/etCardName"
                android:layout_below="@+id/etCardName"
                android:layout_marginTop="10dp"
                android:text="Update"
                android:layout_marginBottom="5dp"/>

            <Button
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_boards_extended_list"
                android:text="Close"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="#f50b22"
                android:textStyle="bold"
                android:layout_alignBaseline="@+id/copy"
                android:layout_alignBottom="@+id/copy"
                android:layout_alignStart="@+id/etCardName" />



</RelativeLayout>