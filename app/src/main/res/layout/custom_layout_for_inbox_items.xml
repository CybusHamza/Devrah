<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9.5"
            android:paddingLeft="10dp"
            android:text="Card:test"
            android:textColor="#000"
            android:textSize="15sp" />


        <ImageView
            android:id="@+id/img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:background="@drawable/close_email" />
    </LinearLayout>

    <TextView
        android:id="@+id/board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="Card:test"
        android:textColor="#000"
        android:textSize="13sp" />
    <TextView
        android:id="@+id/boardName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="Card:test"
        android:textColor="#000"
        android:textSize="13sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/project"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Project:test"
            android:textColor="#000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="end"
            android:text="18-07-2017"
            android:textSize="12sp"
            android:textColor="#000" />
    </LinearLayout>

    <TextView

        android:id="@+id/activities_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/inner_drawable_for_card"
        android:gravity="center"
        android:padding="5dp"
        android:text="sdfghj"
        android:textColor="#000"
        android:textSize="15sp" />


</LinearLayout>