<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/relativelayout">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Copy Board"
        android:textSize="17sp"
        android:padding="7dp"
        android:textColor="#525050"

        android:id="@+id/heading" />
    <ImageView
        android:layout_below="@id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/borderline"
        android:background="@drawable/border_line"/>
    <TextView
        android:layout_below="@id/borderline"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textColor="#000"
        android:text="Title: "
        android:layout_alignParentStart="true" />

    <EditText

        android:id="@+id/etTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/black"
        android:layout_below="@+id/title"
        android:textSize="13sp"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:layout_alignStart="@+id/boardSpinner" />
    <TextView
        android:id="@+id/sub_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="12dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:text="Copy to Project : "
        android:layout_below="@+id/borderline"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/projects_group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/back_spinner_black"
        android:layout_below="@+id/sub_heading"
       />


    <TextView
        android:id="@+id/pos_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:text=" Position : "
        android:layout_marginStart="17dp"
        android:layout_below="@+id/projects_group"
        android:layout_alignStart="@+id/sub_heading" />
    <Spinner
        android:id="@+id/position"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/back_spinner_black"
        android:layout_below="@+id/pos_txt" />

    <LinearLayout
        android:layout_below="@id/position"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_gravity="end"
        android:layout_alignParentEnd="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Cancel"
            android:textColor="#f50b22"
            android:textSize="15sp"
            android:id="@+id/close"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Copy"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:id="@+id/copy"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="20dp"
            />
    </LinearLayout>


</LinearLayout>