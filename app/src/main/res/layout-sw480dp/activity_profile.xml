<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Views.Main.ProfileActivity"
    android:background="@drawable/bg_projects">
    <include
        android:id="@+id/header"
        layout="@layout/app_bar">

    </include>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header">
        <RelativeLayout
            android:layout_below="@id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="15dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilePic"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/profile_pic"
                app:civ_border_width="2dp"
                app:civ_border_color="#fff"/>
            <Button
                android:id="@+id/btnchoosePic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose file"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/profilePic"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                android:textColorHint="#BFBFBF"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnchoosePic"
                android:layout_marginTop="15dp"
                android:layout_alignParentStart="true">

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:hint="E-mail"
                    android:textCursorDrawable="@null"
                    android:editable="false"
                    android:textColorHint="#636262"
                    android:backgroundTint="#636262"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout

                android:layout_width="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"

                android:paddingTop="20dp"
                android:textColorHint="#BFBFBF"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:layout_alignParentStart="true"
                android:layout_marginTop="23dp"
                android:id="@+id/firstName">

                <EditText

                    android:layout_width="match_parent"
                    android:hint="First Name"
                    android:id="@+id/etFname"
                    android:textColorHint="#636262"
                    android:backgroundTint="#636262"
                    android:textCursorDrawable="@null"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout

                android:layout_width="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                android:textColorHint="#BFBFBF"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_below="@+id/firstName"
                android:layout_alignStart="@+id/description"
                android:id="@+id/lastName">

                <EditText

                    android:layout_width="match_parent"
                    android:hint="Last Name"
                    android:id="@+id/etLName"
                    android:textColorHint="#636262"
                    android:backgroundTint="#636262"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textCursorDrawable="@null"
                    />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout

                android:layout_width="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp"

                android:textColorHint="#BFBFBF"
                android:layout_height="wrap_content"
                android:id="@+id/phoneNumber"
                android:layout_marginTop="22dp"
                android:layout_below="@+id/lastName"
                android:layout_alignParentEnd="true">

                <EditText

                    android:layout_width="match_parent"
                    android:hint="Phone Number"
                    android:id="@+id/etPhoneNum"
                    android:textColorHint="#636262"
                    android:backgroundTint="#636262"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:textCursorDrawable="@null"
                    />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout

                android:layout_width="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                android:textColorHint="#BFBFBF"
                android:id="@+id/devrahTag"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_below="@+id/phoneNumber"
                android:layout_alignParentEnd="true">

                <EditText

                    android:layout_width="match_parent"
                    android:hint="Devrah Tag"
                    android:id="@+id/etDevrahTag"
                    android:textColorHint="#636262"
                    android:backgroundTint="#636262"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textCursorDrawable="@null"
                    />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout

                android:layout_width="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:id="@+id/company"
                android:paddingTop="20dp"

                android:textColorHint="#BFBFBF"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_below="@+id/devrahTag"
                android:layout_alignParentEnd="true">

                <EditText

                    android:layout_width="match_parent"
                    android:hint="Company"
                    android:id="@+id/etCompany"
                    android:textColorHint="#636262"
                    android:backgroundTint="#636262"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textCursorDrawable="@null"
                    />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout

                android:layout_width="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                android:textColorHint="#BFBFBF"
                android:layout_height="wrap_content"
                android:id="@+id/position"
                android:layout_marginTop="22dp"
                android:layout_below="@+id/company"
                android:layout_alignParentEnd="true">

                <EditText

                    android:layout_width="match_parent"
                    android:hint="Position"
                    android:id="@+id/etPosition"
                    android:textColorHint="#636262"
                    android:backgroundTint="#636262"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textCursorDrawable="@null"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout

                android:layout_width="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                android:textColorHint="#BFBFBF"
                android:layout_height="wrap_content"
                android:id="@+id/website"
                android:layout_marginTop="22dp"
                android:layout_below="@+id/position"
                >

                <EditText

                    android:layout_width="match_parent"
                    android:hint="Website"
                    android:id="@+id/etWebsite"
                    android:textColorHint="#636262"
                    android:backgroundTint="#636262"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textCursorDrawable="@null"
                    />

            </android.support.design.widget.TextInputLayout>









            <LinearLayout
                android:id="@+id/btmlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/website"
                android:layout_alignParentBottom="true"
                android:gravity="end">
                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    />
                <Button
                    android:id="@+id/btnUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update"/>



            </LinearLayout>



        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
