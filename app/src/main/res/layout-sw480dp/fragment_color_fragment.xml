<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:clickable="true"
    android:padding="20dp"

    android:id="@+id/mainContainer"
    tools:context=".Views.cards.LabelColorFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Label"
        android:textColor="#000"

        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />


    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        android:textColor="#000000"
        android:cursorVisible="true"
        android:focusable="true"
        android:focusableInTouchMode="true"

        android:textSize="20sp"
        android:id="@+id/etLabelName"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/laRow1"
        android:layout_below="@id/etLabelName">


        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="@color/colorAccent"

            android:id="@+id/relativeLayout2"
            >


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:id="@+id/img2"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:src="@drawable/tick_btn_icon"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:id="@+id/rvOne"

            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="#000"
            >


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/img_one"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right"
                android:src="@drawable/tick_btn_icon"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:background="#000"
            android:layout_weight="1"
            android:layout_alignTop="@+id/relativeLayout6"
            android:layout_alignStart="@+id/relativeLayout7"
            android:id="@+id/relativeLayout9">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:id="@+id/img9"
                android:visibility="gone"
                android:layout_gravity="right"
                android:src="@drawable/tick_btn_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/laRow2"
        android:layout_marginTop="20dp"
        android:layout_below="@id/laRow1">

        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:background="#000"
            android:layout_weight="1"
            android:layout_marginRight="10dp"

            android:id="@+id/relativeLayout7">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:id="@+id/img7"
                android:visibility="gone"
                android:src="@drawable/tick_btn_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:background="@color/colorYellow"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:id="@+id/relativeLayout8">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:id="@+id/img8"
                android:visibility="gone"
                android:src="@drawable/tick_btn_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:background="#000"
            android:src="@drawable/background_label_view"
            android:layout_weight="1"

            android:id="@+id/relativeLayout5"
            >


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/img5"
                android:visibility="gone"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:src="@drawable/tick_btn_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/laRow3"
        android:layout_marginTop="20dp"
        android:layout_below="@id/laRow2">

        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@color/colorOrangeRed"
            android:layout_alignTop="@+id/relativeLayout3"
            android:layout_alignStart="@+id/relativeLayout4"
            android:id="@+id/relativeLayout6">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:id="@+id/img6"
                android:visibility="gone"
                android:src="@drawable/tick_btn_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorOrange"

            android:id="@+id/relativeLayout4">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/img4"
                android:visibility="gone"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:src="@drawable/tick_btn_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:background="@color/colorGreen"
            android:id="@+id/relativeLayout3"
            android:layout_weight="1"
            android:layout_below="@+id/relativeLayout2"
            android:layout_alignParentStart="true">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:id="@+id/img3"
                android:visibility="gone"
                android:src="@drawable/tick_btn_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/laRow5"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/laRow3">
        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:background="@color/colorGreen"
            android:id="@+id/relativeLayout10"
            android:layout_weight="1"
            android:layout_below="@+id/relativeLayout2"
            android:layout_alignParentStart="true">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:id="@+id/img10"
                android:visibility="gone"
                android:src="@drawable/tick_btn_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:background="@color/colorGreen"
            android:id="@+id/relativeLayout11"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:layout_below="@+id/relativeLayout2"
            android:layout_alignParentStart="true">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:id="@+id/img11"
                android:visibility="gone"
                android:src="@drawable/tick_btn_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:background="@color/colorGreen"
            android:id="@+id/relativeLayout12"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:layout_below="@+id/relativeLayout2"
            android:layout_alignParentStart="true">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:id="@+id/img12"
                android:visibility="gone"
                android:src="@drawable/tick_btn_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/laRow4"
        android:layout_marginTop="40dp"
        android:layout_below="@id/laRow5">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:id="@+id/tvDelete"
            android:visibility="gone"
            android:textSize="15sp"
            android:layout_weight="1"
            android:textColor="#f50b22"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="15sp"
            android:textColor="#f50b22"
            android:layout_weight="1"
            android:id="@+id/tvCancel"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:gravity="right"
            android:layout_weight="1"
            android:id="@+id/doneLabelName"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            />



    </LinearLayout>

</RelativeLayout>
